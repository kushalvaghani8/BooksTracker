@page
@model BooksTracker.Pages.Books.IndexModel

@{ ViewData["Title"] = "Index"; }


@section JSONLD
{
    [
    @foreach (var entry in Model.JSONLD)
    {
            @Html.Raw(entry.ToHtmlEscapedString() + ',');
        }
    ]
}

<h1>Index</h1>
<p>
    <a asp-page="CreateCategory">Create New Category</a>
</p>

<p>
    <a asp-page="CreateCategoryType">Create New Category Type</a>
</p>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].CategoryType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Book)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Author)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryType.Name)
    </td>
    <td>
        <a asp-page="./Edit" asp-route-id="@item.ISBN">Edit</a> |
        <a asp-page="./Details" asp-route-id="@item.ISBN">Details</a> |
        <a asp-page="./Delete" asp-route-id="@item.ISBN">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
